  <style type="text/css">
	v\:* {
	  behavior:url(#default#VML);
	}
	</style>
  <style type="text/css">
		#dhtmltooltip{
		position: absolute;
		width: 150px;
		height:100px;
		border: 2px solid #3878b1;
		padding: 5px;
		background-color: #e3f1ff;
		visibility: hidden;
		z-index: 100;
		/*Remove below line to remove shadow. Below line should always appear last within this CSS*/
		filter: progid:DXImageTransform.Microsoft.Shadow(color=gray,direction=135);
		}
  </style>
  <script src="http://maps.google.com/maps?file=api&v=2&key=ABQIAAAAkhk94Ko6u4vxw8pCsnuUwRRDvpwnzZ1vG7h903BxZ4zJA19VDBQBPsRjB0XXC-Bv8XvXflDPzcYqAA" type="text/javascript"></script>
  <%= Cartographer::Header.header_for(request) %>
  <%= javascript_include_tag 'EWindow' %>
  <%= stylesheet_link_tag "EWindow" %>
  <style type="text/css">
    /* Style gmap popups */  
    .info_window #title {
      color: white;
      background-color: #0860AC;
      font-weight: bold;
      height: 20px;
      padding-top: 5px;
      padding-left: 10px;
      font-size: 140%;
    }
  
    .info_window #content {
      color: #515151;
      font-weight: bold;
      padding: 5px 10px;
    }
  
    .info_window #content #link {
      color: #1C73C0;
      text-align: right;
      padding-top: 10px;
    }
  
    .info_window #content #link span {
      color: black;
    }
  </style>
  
</head>
